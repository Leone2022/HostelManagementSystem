<!-- Add custom CSS at the bottom of the page -->
<style>
    .hostel-card {
        transition: transform 0.3s ease;
        border-radius: 12px;
        overflow: hidden;
    }
    
    .hostel-card:hover {
        transform: translateY(-5px);
    }
    
    /* Add responsive fixes */
    @@media (max-width: 768px) {
        .hero-bg {
            height: auto;
            padding: 60px 0;
        }
    }
</style>

<!-- Add custom JavaScript for animations if needed -->
@section Scripts {
    <script>
        // Initialize any JavaScript functionalities here
        $(document).ready(function() {
            // Add animations or interactions if needed
            
            // Simple animation for statistics section
            $('.stat-number').each(function() {
                $(this).prop('Counter', 0).animate({
                    Counter: $(this).text()
                }, {
                    duration: 2000,
                    easing: 'swing',
                    step: function(now) {
                        $(this).text(Math.ceil(now));
                    }
                });
            });
        });
    </script>
}