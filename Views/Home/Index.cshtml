@model IEnumerable<HostelMS.Models.Hostel>
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section with Enhanced Design -->
<div class="hero-container position-relative mb-5">
    <div class="hero-bg position-relative" style="background: linear-gradient(135deg, #3a1c71, #131d69, #7d7bff); height: 500px; border-radius: 0 0 20px 20px; overflow: hidden;">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-lg-7 text-white">
                    <h1 class="display-4 fw-bold" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.3);">
                        Bugema University<br>Hostel Management 
                    </h1>
                    <p class="fs-5 mb-4 pe-lg-5">A comprehensive platform for managing student accommodations with ease and efficiency.</p>
                    
                    <!-- Simplified Portal Access -->
                    <div class="d-flex flex-wrap gap-4 mt-4">
                        <a href="/Account/Login?userType=student" class="btn btn-light btn-lg px-4 d-flex align-items-center">
                            <i class="fas fa-user-graduate me-2"></i> Student Portal
                        </a>
                        <a href="/Account/Login?userType=staff" class="btn btn-outline-light btn-lg px-4 d-flex align-items-center">
                            <i class="fas fa-user-tie me-2"></i> Staff Portal
                        </a>
                    </div>
                </div>
                <div class="col-lg-5 d-none d-lg-flex justify-content-center">
                    <div class="hero-image-container position-relative" style="width: 380px; height: 380px;">
                        <div class="d-flex justify-content-center align-items-center h-100">
                            <img src="~/images/bugema-university-logo.png" alt="Bugema University" class="img-fluid" style="max-width: 80%; max-height: 80%; opacity: 0.9;">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Wave Decoration -->
        <div class="wave-container position-absolute bottom-0 left-0 w-100" style="height: 50px; overflow: hidden;">
            <svg viewBox="0 0 500 150" preserveAspectRatio="none" style="height: 100%; width: 100%;">
